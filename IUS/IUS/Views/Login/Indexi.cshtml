@{
    Layout = "~/Views/Shared/_Layouti.cshtml";
}
@section estilosPersonalizados{
    <link rel="stylesheet" href="~/Content/ius_theme/views/Login/Indexi/style.css" />
    <link rel="stylesheet" href="~/Content/ius_theme/views/Login/Indexi/media.css" />
}
@section scriptsPersonalizados{
    <script src="~/Scripts/views/Login/Indexi/script.js"></script>
    <script src="~/Scripts/views/Login/Indexi/functions.js"></script>
}

<div class="lineaRoja">

</div>
<div class="row marginNull contenedorCuerpo">
    <div class="seccionLogin">
        <div class="cuadritoLogin">
            <div class="row marginNull divImageLogoLogin">
                <img class="imageLogoLogin" src="@Url.Content("~/Content/images/generales/logo.png")" />
            </div>
            <div class="divImageLogoLogin divUserImage">
                <img class="imageLogoUser" src="@Url.Content("~/Content/images/generales/user.png")" />
                <span class="spAreaPrivada">Area Privada</span>
            </div>
            <div class="row marginNull divControles">
                <form class="frmLogin" action="" method="post">
                    <input type="hidden" name="txtHdSelf" value="@Request.Url.AbsoluteUri" />
                    <input class="txtLoginIus" name="txtUsuario" placeholder="NOMBRE DE USUARIO" />
                    <input type="password" class="txtLoginIus" name="txtPass" placeholder="CONTRASEÑA" />
                    <button class="btn btnIniciar">Iniciar</button>
                    <div class="row marginNull divMensajeLogin">@ViewBag.error</div>
                </form>
            </div>
            <div class="divOlvidePass">
                <a href="#">Olvide mi contraseña</a>
            </div>
        </div>
    </div>
</div>

