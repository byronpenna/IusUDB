@using IUSLibs.FrontUI.Entidades
@{
    string path     = "~/Content/images/views/Instituciones/";
    string america  = Url.Content(path + "americai.png"),   americaRoja    = Url.Content(path + "americair.png");
    string africa   = Url.Content(path + "africai.png"),    africaRoja     = Url.Content(path + "africair.png");
    string asia     = Url.Content(path + "asiai.png"),      asiaRoja       = Url.Content(path + "asiair.png");
    string europa   = Url.Content(path + "europai.png"),    europaRoja     = Url.Content(path + "europair.png");
    string oceania  = Url.Content(path + "oceania.png"),    oceaniaRoja    = Url.Content(path + "oceaniar.png");
    List<Continente> continentes = null;
    string strAmerica = "", strEuropa = "", strAsia = "", strAfrica = "", strOceania = "";
    try
    {
        continentes = (List<Continente>)ViewBag.nombresContinentes;
        if (continentes != null && continentes.Count > 0)
        {
            strAmerica  = continentes[1]._continente.ToString();
            strAfrica   = continentes[0]._continente.ToString();
            strAsia     = continentes[2]._continente.ToString();
            strEuropa   = continentes[3]._continente.ToString();
            strOceania  = continentes[4]._continente.ToString();
        }
    }
    catch (Exception x)
    {

    }
}
<ul class="menuLateral">
    @*a pesar de llamarse menu conocenos es una clase general*@
    <li id="2">
        <div class="row parent">
            <div class="colImgMap">
                <input type="hidden" class="txtHdNormal" value="@america" />
                <input type="hidden" class="txtHdRoja" value="@americaRoja" />
                <img class="imgMap" src="@america" />
            </div>
            <div class="texto">@strAmerica</div>
        </div>
    </li>
    <li id="1">
        <div class="row">
            <div class="colImgMap">
                <input type="hidden" class="txtHdNormal" value="@africa" />
                <input type="hidden" class="txtHdRoja" value="@africaRoja" />
                <img class="imgMap" src="@africa" />
            </div>
            <div class="texto">@strAfrica</div>
        </div>
    </li>
    <li id="3">
        <div class="row">
            <div class="colImgMap">
                <input type="hidden" class="txtHdNormal" value="@asia" />
                <input type="hidden" class="txtHdRoja" value="@asiaRoja" />
                <img class="imgMap" src="@asia" />
            </div>
            <div class="texto">@strAsia</div>
        </div>
    </li>
    <li id="4">
        <div class="row">
            <div class="colImgMap">
                <input type="hidden" class="txtHdNormal" value="@europa" />
                <input type="hidden" class="txtHdRoja" value="@europaRoja" />
                <img class="imgMap" src="@europa" />
            </div>
            <div class="texto">@strEuropa</div>
        </div>
    </li>
    <li id="5">
        <div class="row">
            <div class="colImgMap">
                <input type="hidden" class="txtHdNormal" value="@oceania" />
