@using IUSLibs.ADMINFE.Entidades.Noticias
@{
    List<Post> posts = (List<Post>)ViewBag.noticias;
    string src = "";
}
<footer>
    <div class="row feedSection marginNull">
        @if(posts != null)
        {
            foreach (Post post in posts)
            {
                if(post._miniatura != null){
                    src = "data:image/png;base64," + Convert.ToBase64String(post._miniatura);
                }
                else
                {
                    src = Url.Content("~/Content/images/generales/image.png");
                }
                <a href="@this.Url.Action("Index", "Noticias", new { id = post._idPost })">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="col-xs-2 col-sm-2 col-lg-2 col-md-2 imgFeedNoticia">
                            <!-- <img src="~/Content/images/test/cruz.png" /> -->
                            <img src="@src" />
                        </div>
                        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10  cuerpoFeedNoticia">
                            <h3>@post._titulo</h3>
                            <p>
                                @post._descripcion...<span class="leerMas">Leer mas</span>
                            </p>
                        </div>
                    </div>
                </a>
            }

        }
        else
        {
            <div class="col-lg-12 text-center"><h4>No hay noticias para mostrar</h4></div>
        }
    </div>
    <div class="row marginNull copyRight">
        <span>@ViewData["copyright-1"]</span>
        <span>@ViewData["copyright-2"]</span>
        <span>@ViewData["copyright-3"]</span>
    </div>
</footer>