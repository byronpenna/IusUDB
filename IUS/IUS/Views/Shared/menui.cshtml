@using IUSLibs.TRL.Entidades
@{
    List<Idioma> idiomas = (List<Idioma>)ViewBag.idiomas;
    string imgAreaPrivada = Url.Content("~/Content/images/views/Home/header/user.png");
    string rutaLogin = IUSLibs.GENERALS.Rutas.IUSBACK + "Home/Index";
    if (ViewBag.submenu11 != null && ViewBag.submenu11 != "")
    {
        imgAreaPrivada = Url.Content("~/Content/images/views/Home/header/userRojo.png");
    }
}
<header>
    <div class="row marginNull header centroPagina">
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 logoHeaderSection ">
            <img src="@Url.Content("~/Content/images/generales/logo2.png")" />
        </div>
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3 divSectionIdioma ">
                <div class="otroDiv">
                    <div class="tituloIdioma">@ViewData["lb-idioma"]</div>
                    <div class="padreCaja">
                        <div class="cajaArriba">
                            <div class="caja">
                                <select class=" cbIdioma">
                                    <option value="-1">Idioma</option>
                                    @*<option>Español</option>*@
                                    @if (idiomas != null)
                                    {
                                        foreach (Idioma idioma in idiomas)
                                        {
                                            <option value="@idioma._idIdioma">@idioma._idioma</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-9">
                <nav class="navPrincipal">
                    <div class="hamburguerButton">
                        <i class="fa fa-bars"></i>
                    </div>
                    <ul>
                        <li class="liPrincipal @ViewBag.menu11">
                            <a href="@Url.Action("Index", "Home")" class="aMenuPrincipal">
                                @*Inicio*@
                                @ViewData["menu1.1"]
                            </a>
                        </li>
                        <li class="liPrincipal @ViewBag.menu12">
                            <a href="@Url.Action("Index","Conocenos")" class="aMenuPrincipal">
                                @*Conocenos*@
                                @ViewData["menu2.1"]
                            </a>
                        </li>
                        <li class="liPrincipal @ViewBag.menu13">
                            <a href="@Url.Action("Index","Instituciones")" class="aMenuPrincipal">
                                @*Instituciones*@
                                @ViewData["menu2.2"]
                            </a>
                        </li>
                        <li class="liPrincipal">
                            <a href="#" class="aMenuPrincipal">

                            </a>
                        </li>
                        <li class="liPrincipal @ViewBag.menu24">
                            <a href="@Url.Action("Index","Repositorio")" class="aMenuPrincipal">
                                @*Recursos*@
                                @ViewData["menu2.4"]
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <div class="row marginNull subSeccion">
        <div class="centroPagina row marginNull">
            <div class="col-lg-offset-9 col-lg-3 col-md-12 icoContactos">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 menuChiquito">
                    <a class="@ViewBag.submenu11 linkAreaPrivada headerTextoLink" href="@rutaLogin">
                        <img class="imgIcoHeader" src="@imgAreaPrivada" /> @ViewData["menu1.2"] @*Área privada*@
                    </a>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 menuChiquito">
                    <a class="@ViewBag.submenu12 linkAreaPrivada headerTextoLink" href="#">
                        <img class="imgIcoHeader headerTextoLink" src="@Url.Content("~/Content/images/views/Home/header/mail.png")" /> @ViewData["menuContacto"]
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row marginNull rowSearch">
        <div class="col-md-12 col-sm-12 col-xs-12 col-lg-1">
            @*<i class="fa fa-chevron-left navBtn navLeft" direccion="0"></i>*@
        </div>
        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-offset-7 col-lg-2 contenedorInputSearch">
            @*<input type="text" class="form-control inputSearch"/>*@
            <div class="form-group has-feedback inputSearchDiv">
                @*<input type="text" class="form-control" placeholder="Username" />*@
                <input type="text" class="form-control inputSearch" />
                <i class="glyphicon form-control-feedback icoSearch">
                    <img class="imgLupita" src="@Url.Content("~/Content/images/generales/lupita.png")" />
                </i>
            </div>
        </div>
        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-offset-1 col-lg-1">
            @*<i class="fa fa-chevron-right navBtn navRight" direccion="1"></i>*@
        </div>
    </div>
</header>
