            {
                <div class="row marginNull sessionSpace">
                    <div class="row marginNull text-center">
                        <span>@usuarioSession.nombreCompleto</span>
                    </div>
                    <div class="row marginNull text-center">
                        <a href="#" class="aCerrarSession">@ViewData["txt-cerrarSesion"]</a>
                    </div>
                </div>
                
            }
        </div>
        <div class="col-lg-10 col-md-12 paddingNull">
            <nav class="menu">
                <div class="mobileButton">
                    <i class="fa fa-bars desplegableMobile"></i>
                </div>
                <ul class="ulMenu">
                    <li>
                        <a href="@Url.Action("Index", "Home")" class="@ViewBag.menu11">
                            @ViewData["menu1.1"]
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Login")" class="@ViewBag.menu12">
                            @ViewData["menu1.2"]
                        </a>
                    </li>
                    <li>
                        <a href="#" class="@ViewBag.menu13">
                            @ViewData["menu1.3"]
                        </a>
                    </li>
                    <li>
                        <select class="form-control cbIdioma">
                            <option value="-1">Idioma</option>
                            @if (idiomas != null)
                            {
                                foreach (Idioma idioma in idiomas)
                                {
                                    <option value="@idioma._idIdioma">@idioma._idioma</option>
                                }
                            }
                        </select>
                        <a href="http://168.243.3.62/iusback/" target="_blank">
