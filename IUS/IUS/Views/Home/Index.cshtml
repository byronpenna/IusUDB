@using IUSLibs.ADMINFE.Entidades
@section estilosPersonalizados{
    <link  rel="stylesheet" href="~/Content/ius_theme/views/home/style.css"/>    
    <link rel="stylesheet" href="~/Content/ius_theme/views/home/media.css" />   
}
@section scriptsPersonalizados{
    <script src="~/Content/third-party/cookiesjs/jquery.cookie.js"></script>
    <script src="~/Scripts/views/Home/script.js"></script>
    <script src="~/Scripts/views/Home/functions.js"></script>
}
@{
    List<SliderImage> slider = (List<SliderImage>)ViewBag.slider;
}
<div class="slider">
    <div class="navs col-lg-12">
        <div class="col-lg-1 pointer">
            <i class="fa fa-chevron-left navBtn" direccion="0"></i>
        </div>
        <div class="col-lg-offset-10 col-lg-1 pointer">
            <i class="fa fa-chevron-right navBtn" direccion="1"></i>
        </div>
    </div>
    @if(slider != null){
        int cn = 0;
        string clases = "";
        foreach(SliderImage image in slider){
            if (cn == 0)
            {
                clases = "activeSliderImage";
            }
            else
            {
                clases = "hidden";
            }
            <img class="@clases" src="data:image/png;base64,@Convert.ToBase64String(image._imagen)" />    
            cn++;
        }
    }else{
        <span>No hay slider</span>    
    }
    
</div>
