                    <img class="minEvento" src="@Url.Content("~/Content/images/generales/calendarionumsc/12.png")" />
                </div>
                <div class="col-lg-8">
                    <h4>Venta de perritos</h4>
                    <p>
                        <strong>12/11/2015</strong>
                    </p>
