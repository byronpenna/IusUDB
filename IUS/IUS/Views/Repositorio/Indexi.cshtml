    <div class="col-lg-4">
        <ul class="menuLateral">
            @if (tiposArchivos != null && tiposArchivos.Count > 0)
            {
                string urlNormal,urlRoja;
                foreach (TipoArchivo tipoArchivo in tiposArchivos)
                {
                    if (tipoArchivo._idTipoArchivo != 1)
                    {
                        urlNormal   = Url.Content("~/Content/images/views/Repositorio/Lateral/" + tipoArchivo._idTipoArchivo + ".png");
                        urlRoja     = Url.Content("~/Content/images/views/Repositorio/Lateral/" + tipoArchivo._idTipoArchivo + "r.png");
                        <li id="@tipoArchivo._idTipoArchivo">
                            <div class="row marginNull">
                                <div class="colImgLateral">
                                    <input type="hidden" class="txtHdNormal" value="@urlNormal" />
                                    <input type="hidden" class="txtHdRoja" value="@urlRoja" />
                                    <input name="txtHdIdTipoArchivo" type="hidden" class="txtHdIdTipoArchivo" value="@tipoArchivo._idTipoArchivo" />
                                    <img class="imgLateral" src="@urlNormal" />
                                </div>
                                <div class="texto">@tipoArchivo._tipoArchivo</div>
                            </div>
                        </li>    
                    }
                }
            }
