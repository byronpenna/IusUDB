@{
    Layout = "~/Views/Shared/_Layouti.cshtml";
    List<Post>  posts   = null;
    Permiso     permiso = null;
    try
    {
        posts   = (List<Post>)ViewBag.posts;
        permiso = (Permiso)ViewBag.permiso;
        
    }
    catch (Exception x)
    {
        
    }
    
    
}
<div class="row marginNull centroPagina cuerpoIndex">
    <div class="centro">
        <div class="row marginNull rowNavegacion">
            <span>
                <a href="@Url.Action("Index","Home")">
                    Menu principal
                </a>
            </span>
            >>>
            <span class="titulo">
                Noticias
            </span>
        </div>
        <div id="tab-1" class="row marginNull seccion tab">
            <div class="cuerpoModulo divTable">
                @if (permiso._crear)
                {
                    
                    <a class="btn botonAgregarNoticia btnPrincipal rojito" href="@Url.Action("IngresarNoticia","Noticias")" @permiso.stringEditar>
                        Agregar noticia
                    </a>
                }

                <!--<button class="btn" type="button" @permiso.stringEditar>
                    Agregar entrada
                </button>-->
                <table class="table tbPosts">
                    <thead>
                        <tr>
                            <th class="hidden"></th>
                            <th>Titulo</th>
                            <th>Creacion</th>
                            <th>Ultima modificacion</th>
                            <th>Descripcion</th>
                            <th>Usuario creador</th>
                            <th>Idioma</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (posts != null && posts.Count > 0)
                        {
                            string enabled;
                            foreach (Post post in posts)
                            {
                                switch (post._publicado)
                                {
                                    case 1:
                                        {
                                            enabled = "disabled";
                                            break;
                                        }
                                    case 0:
                                        {
                                            if (permiso._editar)
                                            {
                                                enabled = "";
                                            }
                                            else
                                            {
                                                enabled = "disabled";
                                            }
                                            break;
                                        }
                                    default:
                                        {
                                            enabled = "";
                                            break;
                                        }
                                }
                                <tr>
                                    <td class="hidden">
                                        <input class="txtHdIdPost" name="txtHdIdPost" value="@post._idPost" />
                                    </td>
                                    <td>@post._titulo</td>
                                    <td>@post.getFechaCreacion</td>
                                    <td>@post.getFechaModificacion</td>
                                    <td class="tdContenido">@post._descripcion</td>
                                    <td>@post._usuario._usuario</td>
                                    <td>@post._idioma._idioma</td>
                                    <td>
                                        <div class="row marginNull">
                                            <button class="btnBack btn btnPublicacion btn-block btn-default" @enabled>
                                                @post.getTxtEstado
                                            </button>
                                        </div>
                                        <div class="btn-group btn-block">
                                            
                                                <a class="btnBack btn btn-default col-lg-6" href="@Url.Action("ModificarNoticia/" + post._idPost, "Noticias") " @enabled>
                                                    Editar
                                                </a>
                                            @*http://localhost:55869//Noticias/preview/2031*@
                                                <a class="btnBack btn btn-default col-lg-6" href="@Url.Action("preview", "Noticias", new {id=post._idPost })">
                                                    Ver
                                                </a>
                                            
                                        </div>
                                        <div class="row marginNull">
                                            <a class="btnBack btn btn-default btn-block " href="@Url.Action("setMiniatura", "Noticias", new { id= post._idPost})" @enabled>
                                                Imagen
                                            </a>
                                        </div>
                                        @*<a href="@Url.Action("index", "ComentarioNoticia", new {id=post._idPost })">
                                            Comentarios
                                        </a>*@
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                @for (int i = 0; i < 7; i++)
                                {
                                    <td class="text-center hidden"></td>
                                }
                                <td class="text-center" colspan="8">No hay posts para mostrar</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div id="tab-2" class="row seccion tab hidden">
    <div class="thumbnailDiv row marginNull">
        <div class="col-lg-4 divPostThumbnail">
            <h4>Nombre post</h4>
            <img src="~/Content/themes/iusback_theme/img/general/image.png" />
            <div class="frmAgregarThumb custom-input-file">
                <div class="fileUpload btn btn-primary">
                    <span>Subir</span>
                    <input type="file" class="upload" />
                </div>
            </div>
        </div>
    </div>
    <div class="divPaginacion">

    </div>
</div>
