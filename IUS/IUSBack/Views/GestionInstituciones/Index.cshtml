@{
    List<Pais> paises               = (List<Pais>) ViewBag.paises;
    List<Institucion> instituciones = (List<Institucion>) ViewBag.instituciones;
}
<div class="row marginNull">
    <div class="row marginNull divDatos">
        <div class="col-lg-12">
            <table class="table table-hover tbInstituciones">
                <thead>
                    <tr>
                        <th></th>
                        <th>Nombre</th>
                        <th>Direccion</th>
                        <th>Pais</th>
                        <th>Acciones</th>
                    </tr>
                    <tr class="trFrmInstituciones">
                        <td></td>
                        <td>
                            <input class="txtNombreInstitucion form-control" name="txtNombreInstitucion" />
                        </td>
                        <td>
                            <textarea class="txtAreaDireccion form-control" name="txtAreaDireccion"></textarea>
                        </td>
                        <td>
                            <select class="cbPais" name="cbPais">
                                @if (paises != null && paises.Count > 0)
                                {
                                    int idContinente = -1; string optionGroup = ""; bool abierto = false;
                                    foreach (Pais pais in paises)
                                    {
                                        if (pais._continente._idContinente != idContinente)
                                        {
                                            if (abierto)
                                            {
                                                optionGroup = "</optiongroup>";
                                                abierto = false;
                                            }

                                            optionGroup = "<optgroup label='" + pais._continente._continente + "'>";
                                            idContinente = pais._continente._idContinente;
                                            @(new HtmlString(optionGroup));
                                            abierto = true;
                                        }
                                        <option value="@pais._idPais">@pais._pais</option>
                                    }
                                    optionGroup = "</optiongroup>";
                                    @(new HtmlString(optionGroup));
                                }
                            </select>
                        </td>
                        <td>
                            <button class="btnAddInstitucion">Agregar </button>
                            
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @if (instituciones != null && instituciones.Count > 0)
                    {
                        foreach (Institucion institucion in instituciones)
                        {
                            <tr>
                                <td>
                                    <input class="txtHdIdInstitucion" name="txtHdIdInstitucion" value="@institucion._idInstitucion" />
                                </td>
                                <td>
                                    @institucion._nombre 
                                </td>
                                <td>
                                    @institucion._direccion
                                </td>
                                <td>
                                    @institucion._pais._pais
                                </td>
                                <td>
                                    <button class="btn">Editar</button>
                                    <button class="btn btnDeleteInstitucion">Eliminar</button>
                                    <a href="@Url.Action("SetLogo", "GestionInstituciones", new { id = institucion._idInstitucion })" class="btn">
                                        Logo
                                    </a>
                                    <a href="@Url.Action("Index", "GestionTelefonos", new { id=institucion._idInstitucion})">Telefonos</a>
                                    <a href="@Url.Action("setMedios","GestionInstituciones",new {id=institucion._idInstitucion})">Medios Electronicos</a>
                                </td>
                            </tr>
                        }
                        
                    }
                </tbody>
            </table>
        </div>
