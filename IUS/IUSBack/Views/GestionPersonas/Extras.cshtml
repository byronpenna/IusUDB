<div class="row marginNull " id="tab1">
    <div class="row marginNull divInformacionPersonal divInformacion">
        <h2>Byron Peña</h2>
        <div class="col-lg-6 divImagePersona">
            <img src="@Url.Content("~/Content/themes/iusback_theme/img/general/profle.png")"/>
            <form action="/" method="post" class="frmImagenPersona">
                <div class="row marginNull">
                    <div class="fileUpload btn">
                        <span>Seleccionar imagen</span>
                        <input type="file" class="upload" id="flMiniatura" accept="image/*" required />
                    </div>
                </div>
                <button class="btn">Establecer</button>
            </form>
        </div>
        <div class="col-lg-6">
            <label>Seleccione pais</label>
            <select class="cbPais form-control" name="cbPais"></select>
            <label>Numero de identificacion</label>
            <input class="txtNumeroIdentificacion form-control" name="txtNumeroIdentificacion" placeholder="0000"/>
            <label>Seleccione estado civil</label>
            <select class="cbEstadoCivil form-control" name="cbEstadoCivil"></select>
        </div>
    </div>
    <div class="marginNull row divInformacionContacto divInformacion">
        <h2>Informacion de contacto</h2>
        <div class="row marginNull">
            <div class="col-lg-6">
                <h3>Correos electronicos</h3>
                <table class="table tabla">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Etiqueta</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
            <div class="col-lg-6">
                <h3>Numeros</h3>
                <table class="table tabla">
                    <thead>
                        <tr>
                            <th>Telefono</th>
                            <th>Pais</th>
                            <th>Etiqueta</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        
    </div>
</div>