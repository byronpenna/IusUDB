@using IUSLibs.SEC.Entidades
@{
    List<Submenu> submenus = (List<Submenu>)ViewBag.submenuss;
    
}
@section scriptsPersonalizados{
    <script src="~/Scripts/Views/Menu/script.js"></script>
    <script src="~/Scripts/Views/Menu/functions.js"></script>
}
<div class="row marginNull RowMenu">
    @if (submenus != null && submenus.Count > 0)
    {
        string icono = "";
        foreach (Submenu submenu in submenus)
        {
            if (submenu._icono != null && submenu._icono != "")
            {
                icono = submenu._icono;
            }
            else
            {
                icono = "cursor.png";
            }
            <div class="col-lg-3 divMenu">
                <a href="@Url.Content("~"+submenu._enlace)">
                    <div class="panel panel-default panelMenuOp">
                        <div class="panel-body">
                            <img src="~/Content/themes/iusback_theme/img/general/menu/@icono" />
                        </div>
                        <div class="panel-footer footerMenu">
                            @submenu._textoSubMenu
                        </div>
                    </div>
                </a>
            </div>
            @*<div class="col-lg-3 divMenu">
                <a href="@Url.Content("~"+submenu._enlace)">
                    <img src="~/Content/themes/iusback_theme/img/general/menu/@icono" />
                    @submenu._textoSubMenu
                </a>
            </div>*@

        }

    }
</div>